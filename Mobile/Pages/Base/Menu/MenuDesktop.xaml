<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:menu="clr-namespace:Mobile.Pages.Base.Menu"
             x:Class="Mobile.Pages.Base.Menu.MenuDesktop"
             HorizontalOptions="Start"
             Background="{StaticResource SecondaryBackground}">
    <Grid x:Name="Content"
          VerticalOptions="Fill"
          RowDefinitions="*,Auto"
          ColumnDefinitions="Auto,*">
        <VerticalStackLayout Grid.Row="0"
                             Grid.Column="0"
                             VerticalOptions="Start">
            <menu:TopMenuMobile/>
            <VerticalStackLayout Spacing="10">
                <Button x:Name="Main"
                        HorizontalOptions="FillAndExpand"
                        Margin="0, 30, 0, 0"
                        Padding="15, 13, 219, 13"
                        ImageSource="castle.png"
                        Text="Главная"
                        Style="{StaticResource ButtonSecondary}"
                        Clicked="Main_Clicked"/>
                <Button x:Name="Message"
                        HorizontalOptions="FillAndExpand"
                        Padding="15, 13, 227, 13"
                        ImageSource="crow.png"
                        Text="Посты"
                        Style="{StaticResource ButtonSecondary}"
                        Clicked="Message_Clicked"/>
                <Button x:Name="Mechanics"
                        HorizontalOptions="FillAndExpand"
                        Padding="15, 13, 200, 13"
                        ImageSource="dice.png"
                        Text="Механики"
                        Style="{StaticResource ButtonSecondary}"
                        Clicked="Mechanics_Clicked"/>
                <Button x:Name="Information"
                        HorizontalOptions="FillAndExpand"
                        Padding="15, 13, 182, 13"
                        ImageSource="book.png"
                        Text="Информация"
                        Style="{StaticResource ButtonSecondary}"
                        Clicked="Information_Clicked"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1"
                             Grid.Column="0"
                             VerticalOptions="End">
            <BoxView BackgroundColor="{StaticResource PrimaryText}"
                     WidthRequest="300"
                     HeightRequest="1"/>
            <Button x:Name="InformationArticles"
                    HorizontalOptions="FillAndExpand"
                    Margin="0, 30, 0, 0"
                    Padding="15, 13, 224, 13"
                    ImageSource="faq.png"
                    Text="Справка"
                    Style="{StaticResource ButtonFourth}"/>
            <Button x:Name="Settings"
                    HorizontalOptions="FillAndExpand"
                    Padding="15, 13, 207, 13"
                    ImageSource="settings.png"
                    Text="Настройки"
                    Style="{StaticResource ButtonFourth}"/>
            <Button x:Name="Tasks"
                    HorizontalOptions="FillAndExpand"
                    Padding="15, 13, 173, 13"
                    ImageSource="tasks.png"
                    Text="Тех. поддержка"
                    Style="{StaticResource ButtonFourth}"/>
            <Button x:Name="Out"
                    HorizontalOptions="FillAndExpand"
                    Margin="0,0,0,30"
                    Padding="15, 13, 237, 13"
                    ImageSource="out.png"
                    Text="Выход"
                    Style="{StaticResource ButtonFourth}"
                    Clicked="Out_Clicked"/>
        </VerticalStackLayout>
        <BoxView x:Name="Separator"
                 Grid.RowSpan="2"
                 Grid.Column="0"
                 IsVisible="False"
                 HorizontalOptions="End"
                 WidthRequest="1"
                 Background="{StaticResource SecondaryButton}"/>
    </Grid>
</ContentView>
