<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Label" x:Key="TitlePrimary">
        <Setter Property="FontFamily" Value="Ofont_ru_Optimus"/>
        <Setter Property="FontSize" Value="Title"/>
        <Setter Property="TextColor" Value="{StaticResource White1}"/>
    </Style>

    <Style TargetType="Label" x:Key="TextPrimary">
        <Setter Property="FontFamily" Value="Georgia"/>
        <Setter Property="FontSize" Value="{OnIdiom Desktop=30, Phone=20}"/>
        <Setter Property="TextColor" Value="{StaticResource White1}"/>
    </Style>
</ResourceDictionary>